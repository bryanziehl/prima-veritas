# EditorConfig for Prima Veritas OSS
# Ensures consistent formatting across editors & contributors

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.mjs]
indent_size = 2

[*.sh]
indent_style = space
indent_size = 2
